{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Container",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Report an issue - PC/Laptop",
                                    "color": "Light",
                                    "size":"medium",
                                    "spacing": "Padding"
                                }
                            ]
                        }
                    ],
                    "width": "auto",
                    "verticalContentAlignment": "Center"
                }
            ],
            "spacing": "Medium",
            "horizontalAlignment": "Left",
            "style": "emphasis"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "RichTextBlock",
                    "inlines": [
                        {
                            "type": "TextRun",
                            "text": "NOTE - ",
                            "color": "Warning",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextRun",
                            "text": "Please submit your response from the options below..",
                            "color": "Accent",
                            "weight": "Bolder"
                        }
                    ]
                }
            ],
            "spacing": "Small"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "Container",
                    "items": [
                        {
                            "type": "Input.ChoiceSet",
                            "id": "action",
                            "placeholder": "Please choose...",
                            "choices": [
                                {
                                    "title": "Desktop",
                                    "value": "issue-computer-pc-Desktop"
                                },
                                {
                                    "title": "Laptop",
                                    "value": "issue-computer-pc-Laptop"
                                },
                                {
                                    "title": "Projector",
                                    "value": "issue-computer-pc-Projector"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Submit"
                        }
                    ],
                    "spacing": "None"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2"
}